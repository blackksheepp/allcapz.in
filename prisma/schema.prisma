// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Collections {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  products Product[]  
}

type Product {
  id String
  image String
  title String
  price Int
  size String
  quantity Int?
  collection String
}

model Users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String @unique  
}

model Carts {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user String @unique  
  products Product[]
}