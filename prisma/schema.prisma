// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Collections {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  products Product[]  
}

type Product {
  image String
  title String
  price Int
  size String
}

